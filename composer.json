{
	"name": "automattic/hidden-posts",
	"description": "The opposite of sticky posts.",
	"type": "wordpress-plugin",
	"license": "GPL-2.0-or-later",
	"support": {
		"issues": "https://github.com/Automattic/hidden-posts/issues",
		"source": "https://github.com/Automattic/hidden-posts"
	},
	"authors": [
		{
			"name": "Contributors",
			"homepage": "https://github.com/Automattic/hidden-posts/graphs/contributors"
		}
	],
	"require": {
		"php": ">=5.6"
	},
	"require-dev": {
		"composer/installers": "~1.0",
		"dealerdirect/phpcodesniffer-composer-installer": "^0.7.1",
		"php-parallel-lint/php-parallel-lint": "^1.2",
		"phpcompatibility/php-compatibility": "^9.3.5",
		"szepeviktor/phpstan-wordpress": "^0.6.0",
		"yoast/phpunit-polyfills": "^0.2.0",
		"squizlabs/php_codesniffer": "^3.5",
		"wp-coding-standards/wpcs": "^2.3"
	},
	"scripts": {
		"phpcs": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcs",
		"phpcbf": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcbf",
		"lint": "@php ./vendor/bin/parallel-lint --exclude .git --exclude vendor .",
		"analyse": "@php ./vendor/bin/phpstan analyse --level max hidden-posts.php",
		"test": "@php ./vendor/bin/phpunit/phpunit"
	}
}
